<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <property name="autoIncrement" value="true"/>

    <changeSet id="202306212059-1" author="DmitriKonnov">
        <createTable tableName="brand">
            <column name="id" type="bigint"  autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="int" valueSequenceNext="seq__brand">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="202306212106-unique-constraints" author="DmitriKonnov">
        <addUniqueConstraint tableName="brand"
                             columnNames="code"
                             constraintName="ux_brand__code"/>
        <addUniqueConstraint tableName="brand"
                             columnNames="name"
                             constraintName="ux_brand__name"/>
    </changeSet>

    <changeSet id="202306221600-add-sequence" author="DmitriKonnov">
        <createSequence  cacheSize="1"
                         cycle="false"
                         dataType="int"
                         incrementBy="1000"
                         ordered="true"
                         sequenceName="seq__brand"
                         startValue="1000"/>
    </changeSet>


</databaseChangeLog>