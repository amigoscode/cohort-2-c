<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <property name="autoIncrement" value="true"/>
    <property name="now" value="now()" dbms="postgresql"/>

    <changeSet id="202306212035-1" author="DmitriKonnov">
            <createTable tableName="car">
                <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="car_provider_id" type="bigint">
                    <constraints nullable="false"/>
                </column>
                <column name="registration_number" type="UUID">
                    <constraints nullable="false"/>
                </column>
                <column name="brand_code" type="int">
                    <constraints nullable="false"/>
                </column>
                <column name="brand_model_code" type="int">
                    <constraints nullable="false"/>
                </column>
                <column name="production_year" type="date">
                    <constraints nullable="false"/>
                </column>
                <column name="max_speed" type="int">
                    <constraints nullable="false"/>
                </column>
                <column name="horse_power" type="int">
                    <constraints nullable="false"/>
                </column>
                <column name="rgb_code" type="varchar"></column>
                <column name="description" type="varchar"></column>
                <column name="category_code" type="int">
                </column>
                <column name="booking_status_code" type="int">
                    <constraints nullable="false"/>
                </column>
                <column name="price" type="float">
                    <constraints nullable="false"/>
                </column>
                <column name="img_url" type="varchar">
                    <constraints nullable="false"/>
                </column>
                <column name="is_visible" type="boolean">
                    <constraints nullable="false"/>
                </column>
            </createTable>
    </changeSet>

    <changeSet id="202306212126-1-addForeignKeyConstraint" author="DmitriKonnov">
        <addForeignKeyConstraint baseTableName="car"
                                 baseColumnNames="brand_code"
                                 constraintName="fk_car__brand_code_id"
                                 referencedTableName="brand"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="car"
                                 baseColumnNames="brand_model_code"
                                 constraintName="fk_car__brand_model_code_id"
                                 referencedTableName="brand_model"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="car"
                                 baseColumnNames="car_provider_id"
                                 constraintName="fk_car__car_provider_id"
                                 referencedTableName="car_provider"
                                 referencedColumnNames="id"/>
    </changeSet>


    <changeSet id="202306212158-1--car-audit" author="DmitriKonnov">
        <addColumn tableName="car">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>

            <column name="last_modified_by" type="varchar(50)"/>

            <column name="last_modified_date" type="timestamp"/>

            <column name="is_deleted" type="boolean" defaultValueBoolean="false" />

        </addColumn>
    </changeSet>


</databaseChangeLog>